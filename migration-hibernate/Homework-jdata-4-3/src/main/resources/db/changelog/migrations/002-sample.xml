<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xci="http://www.w3.org/2001/XMLSchema-instance"
                   xci:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="002" author="gromov">
        <createTable tableName="books">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="book" type="varchar(60)">
                <constraints nullable="true"/>
            </column>
            <column name="author" type="varchar(60)">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="int">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>